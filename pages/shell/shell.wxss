/* pages/shell/shell.wxss */
pages{
  background-color: #a8a8a8;
}
.fms{
  width: 100vw;
  height: 160px;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  border-bottom: 1px solid #dd413a;
  background-color: #dd413a;
  margin-bottom: 15px;
}

.textRow{
  display: flex;
  padding-top: 10px;
  padding-left: 15px;
  margin-bottom: 5px;
  background-color: #fff;
}
.ds{
  width: 10px;
  height: 10px;
  border-radius:20px; 
  background-color: #dd413a;
  margin-right: 10px;
  margin-top: 7px;
}
.text2{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;  
}